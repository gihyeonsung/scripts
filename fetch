#!/bin/sh
clock=$(lscpu --parse=MINMHZ | tail --lines=1 | xargs printf "%.0f")
mem=$(free --mebi | grep "Mem:" | tr --squeeze ' ')
mem_total=$(echo "$mem" | cut --delimiter=' ' --field=2)
mem_used=$(echo "$mem" | cut --delimiter=' ' --field=3)
up=$(uptime --pretty | sed -E "s/.*up\s+//")

echo "cpu    ${clock}MHz*$(nproc)"
echo "mem    ${mem_used}/${mem_total}MiB"
echo "up     $up"
echo "kernel $(uname -r)"
echo ""
palette
